<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFF"
    tools:context="com.pruebaclass1.camilo.pruebaclass1.NuevoActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo"
        android:id="@+id/btnBuscar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="120dp"
        android:textColor="#ffff0006" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/btnBuscar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="120dp"
        android:onClick="irAyuda" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temas"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="120dp"
        android:onClick="irTemas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titulo: "
        android:id="@+id/textPasado"
        android:layout_below="@+id/btnBuscar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:textColor="#000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pregunta: "
        android:id="@+id/textView2"
        android:layout_below="@+id/textPasado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre: "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fecha: "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campoTitulo"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/btnBuscar"
        android:layout_toEndOf="@+id/btnBuscar"
        android:width="200dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campoPregunta"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/campoTitulo"
        android:layout_alignStart="@+id/campoTitulo"
        android:width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campoNombre"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/btnBuscar"
        android:layout_toEndOf="@+id/btnBuscar"
        android:width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/campoFecha"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/campoPregunta"
        android:layout_alignStart="@+id/campoPregunta"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar"
        android:id="@+id/btnTerminar"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:onClick="crearTema" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail: "
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/campoEmail"
        android:width="200dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/btnBuscar"
        android:layout_toEndOf="@+id/btnBuscar" />

</RelativeLayout>
